source 'https://rubygems.org'

# Run the "bundle install" command to install the gems
# Rubocop for Ruby
# run rubocop -a to fix the errors
gem 'rubocop', '>= 1.0', '< 2.0'

# Rspec for testing Ruby
# run rspec to run the tests
# It will test the code in the spec folder. Files ended in _spec.rb
gem 'rspec', '>=3.0', '< 4.0'
